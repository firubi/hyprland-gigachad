# BACKGROUND
background {
    monitor = DP-4
    path = ~/Pictures/Wallpapers/wallhaven-x8j2y3-upscale.jpg
    blur_passes = 2
    contrast = 1
    brightness = 0.5
    vibrancy = 0.2
    vibrancy_darkness = 0.2
}

background {
    monitor = HDMI-A-2
    brightness = 0
}

# GENERAL
general {
    no_fade_in = true
    no_fade_out = true
    hide_cursor = false
    grace = 0
    disable_loading_bar = true
}

# INPUT FIELD
input-field {
    monitor = DP-4
    size = 250, 60
    outline_thickness = 2
    dots_size = 0.2 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.35 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    outer_color = rgba(40, 40, 40, 0.65)
    inner_color = rgba(40, 40, 40, 0.65)
    font_color = rgba(248, 248, 252, 0.98)
    fade_on_empty = false
    rounding = 18
    check_color = rgb(204, 136, 34)
    placeholder_text = <span foreground="##cdd6f4">入力</span>
    hide_input = false
    position = 0, -200
    halign = center
    valign = center
}

# DATE
label {
  monitor = DP-4
  text = cmd[update:1000] echo "$(date +"%A, %B %d")"
  color = rgba(242, 243, 244, 0.75)
  font_size = 20
  font_family = Mononoki Nerd Font
  position = 0, 300
  halign = center
  valign = center
}

# TIME
label {
  monitor = DP-4
  text = cmd[update:1000] echo "$(date +"%-I:%M")"
  color = rgba(242, 243, 244, 0.75)
  font_size = 40
  font_family = Mononoki Nerd Font
  position = 0, 200
  halign = center
  valign = center
}



# Profile Picture
image {
    monitor = DP-4
    path = ~/Pictures/profile.jpg
    size = 200
    border_size = 2
    border_color = $foreground
    position = 0, 0
    halign = center
    valign = center
}
